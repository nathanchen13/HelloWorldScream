<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/earth" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:onClick="ns_happy"
                android:scaleType="fitXY"
                android:src="@drawable/nathan_super_happy" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/imageButton3"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:onClick="n_happy"
                android:scaleType="fitXY"
                android:src="@drawable/nathan_happy2" />

            <ImageButton
                android:id="@+id/imageButton0"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_alignLeft="@+id/imageButton2"
                android:layout_alignParentTop="true"
                android:layout_marginTop="22dp"
                android:background="@null"
                android:onClick="robert_happy"
                android:scaleType="fitXY"
                android:src="@drawable/robert_happy" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_alignLeft="@+id/imageButton3"
                android:layout_alignTop="@+id/imageButton0"
                android:background="@null"
                android:onClick="ryan_happy"
                android:scaleType="fitXY"
                android:src="@drawable/ryan_happy" />

    </RelativeLayout>

</RelativeLayout>
