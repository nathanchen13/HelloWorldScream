<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/fire_earth1"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:onClick="ryan_angry"
                android:scaleType="fitXY"
                android:src="@drawable/ryan_angry" />

            <ImageButton
                android:id="@+id/imageButton31"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_alignLeft="@+id/imageButton11"
                android:layout_alignTop="@+id/imageButton21"
                android:background="@null"
                android:onClick="ns_angry"
                android:scaleType="fitXY"
                android:src="@drawable/nathan_super_angry" />

            <ImageButton
                android:id="@+id/imageButton01"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/imageButton11"
                android:layout_marginLeft="14dp"
                android:background="@null"
                android:onClick="robert_angry"
                android:scaleType="fitXY"
                android:src="@drawable/robert_angry" />

            <ImageButton
                android:id="@+id/imageButton21"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_alignLeft="@+id/imageButton01"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp"
                android:background="@null"
                android:onClick="n_angry"
                android:scaleType="fitXY"
                android:src="@drawable/nathan_angry" />

    </RelativeLayout>

</RelativeLayout>
